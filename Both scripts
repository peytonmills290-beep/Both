-- Tween walk teleport
local function TeleportWalk(targetCFrame, speed)
    speed = speed or 16
    local distance = (targetCFrame.Position - hrp.Position).Magnitude
    local duration = distance / speed

    local tween = TweenService:Create(
        hrp,
        TweenInfo.new(duration, Enum.EasingStyle.Linear),
        {CFrame = targetCFrame}
    )

    tween:Play()
end

-- Load Orion
local OrionLib = loadstring(game:HttpGet("https://raw.githubusercontent.com/jensonhirst/Orion/main/source"))()

local Window = OrionLib:MakeWindow({
    Name = "VillainHub | South Bronx",
    HidePremium = false,
    SaveConfig = true,
    ConfigFolder = "VillainHub_SB"
})

local TeleportTab = Window:MakeTab({
    Name = "Teleport",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

-- Dropdown
local options = {"None"}
for name,_ in pairs(SouthBronxLocations) do
    table.insert(options, name)
end

TeleportTab:AddDropdown({
    Name = "Teleport",
    Default = "None",
    Options = options,
    Callback = function(selected)
        if selected == "None" then return end
        TeleportWalk(SouthBronxLocations[selected], 16)
    end
})

OrionLib:Init()
    end)

    -- FIGHT IN SCHOOL BUTTON
    CreateButton("Fight in a School", 0.65, function()
        GameSelectGUI:Destroy()
        print("Loading Fight in a School script...")-- =========================
-- FIGHT IN A SCHOOL SCRIPT
-- =========================

local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- Load Orion
local OrionLib = loadstring(game:HttpGet("https://raw.githubusercontent.com/jensonhirst/Orion/main/source"))()

local Window = OrionLib:MakeWindow({
    Name = "VillainHub | Fight in a School",
    HidePremium = false,
    SaveConfig = true,
    ConfigFolder = "VillainHub_FIAS"
})

-- =========================
-- COMBAT TAB
-- =========================
local CombatTab = Window:MakeTab({
    Name = "Combat",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

CombatTab:AddDropdown({
    Name = "Style Changer",
    Default = "None",
    Options = {"None", "Hawk", "OMNI", "Hitman", "Philly", "Dukes", "Crashout"},
    Callback = function(style)
        if style == "None" then return end
        if player:FindFirstChild("leaderstats") then
            local class = player.leaderstats:FindFirstChild("Class")
            if class then
                class.Value = style
            end
        end
    end
})

-- =========================
-- TELEPORT TAB
-- =========================
local TeleportTab = Window:MakeTab({
    Name = "Teleport",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

TeleportTab:AddDropdown({
    Name = "Teleport",
    Default = "None",
    Options = {"None", "Library", "Gym", "Outside"},
    Callback = function(selected)
        if selected == "None" then return end

        local char = player.Character or player.CharacterAdded:Wait()
        local hrp = char:WaitForChild("HumanoidRootPart")

        if selected == "Library" then
            hrp.CFrame = CFrame.new(-149.61, 4.57, 129.03)
        elseif selected == "Gym" then
            hrp.CFrame = CFrame.new(-149.48, 4.57, 20.03)
        elseif selected == "Outside" then
            hrp.CFrame = CFrame.new(-201.84, 6.75, 155.90)
        end
    end
})

-- =========================
-- HEAVY TAB
-- =========================
local HeavyTab = Window:MakeTab({
    Name = "Heavy",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

HeavyTab:AddDropdown({
    Name = "Heavy Style",
    Default = "None",
    Options = {"None", "Truck", "Drop Kick"},
    Callback = function(style)
        if style == "None" then return end
        if player:FindFirstChild("leaderstats") then
            local heavy = player.leaderstats:FindFirstChild("Heavy")
            if heavy then
                heavy.Value = style
            end
        end
    end
})

OrionLib:Init()
    end)
end

-- =========================
-- KEY CHECK
-- =========================
KeyBox.FocusLost:Connect(function(enterPressed)
    if not enterPressed then return end
    if KeyBox.Text == "Villainhub" then
        KeyGUI:Destroy()
        ShowGameSelection()
    else
        print("Incorrect key!")
        KeyBox.Text = ""
    end
end)
