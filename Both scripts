-- =====================================
-- VillainHub Loader with Game Selection
-- =====================================
repeat task.wait() until game:IsLoaded()

local Players = game:GetService("Players")
local player = Players.LocalPlayer
local PlayerGui = player:WaitForChild("PlayerGui")

-- =========================
-- KEY GUI SETUP
-- =========================
local KeyGUI = Instance.new("ScreenGui", PlayerGui)
KeyGUI.Name = "KeyGUI"

local MainFrame = Instance.new("Frame", KeyGUI)
MainFrame.Size = UDim2.new(0,400,0,200)
MainFrame.Position = UDim2.new(0.5,-200,0.5,-100)
MainFrame.BackgroundColor3 = Color3.fromRGB(50,50,50)

local Label = Instance.new("TextLabel", MainFrame)
Label.Size = UDim2.new(1,0,0.3,0)
Label.Text = "Key System"
Label.TextScaled = true
Label.BackgroundTransparency = 1
Label.TextColor3 = Color3.fromRGB(255,255,255)

local RedFrame = Instance.new("Frame", MainFrame)
RedFrame.Size = UDim2.new(0.8,0,0.3,0)
RedFrame.Position = UDim2.new(0.1,0,0.5,0)
RedFrame.BackgroundColor3 = Color3.fromRGB(255,0,0)

local KeyBox = Instance.new("TextBox", RedFrame)
KeyBox.Size = UDim2.new(1,-10,1,-10)
KeyBox.Position = UDim2.new(0,5,0,5)
KeyBox.PlaceholderText = "Enter Key..."
KeyBox.TextScaled = true
KeyBox.BackgroundTransparency = 1
KeyBox.TextColor3 = Color3.new(1,1,1)

local GetKeyButton = Instance.new("TextButton", MainFrame)
GetKeyButton.Size = UDim2.new(0.6,0,0.2,0)
GetKeyButton.Position = UDim2.new(0.2,0,0.85,0)
GetKeyButton.BackgroundColor3 = Color3.fromRGB(0,170,255)
GetKeyButton.TextColor3 = Color3.new(1,1,1)
GetKeyButton.Font = Enum.Font.SourceSansBold
GetKeyButton.TextScaled = true
GetKeyButton.Text = "Get Key"

GetKeyButton.MouseButton1Click:Connect(function()
    setclipboard("https://pastebin.com/raw/VmE2cPEi")
    print("Key link copied to clipboard!")
end)

-- =========================
-- GAME SELECTION GUI FUNCTION
-- =========================
local function ShowGameSelection()
    local GameSelectGUI = Instance.new("ScreenGui", PlayerGui)
    GameSelectGUI.Name = "GameSelectGUI"

    local Frame = Instance.new("Frame", GameSelectGUI)
    Frame.Size = UDim2.new(0,400,0,200)
    Frame.Position = UDim2.new(0.5,-200,0.5,-100)
    Frame.BackgroundColor3 = Color3.fromRGB(50,50,50)

    local Title = Instance.new("TextLabel", Frame)
    Title.Size = UDim2.new(1,0,0.3,0)
    Title.Text = "Select Game"
    Title.TextScaled = true
    Title.BackgroundTransparency = 1
    Title.TextColor3 = Color3.fromRGB(255,255,255)

    local function CreateButton(name, posY, callback)
        local Btn = Instance.new("TextButton", Frame)
        Btn.Size = UDim2.new(0.6,0,0.25,0)
        Btn.Position = UDim2.new(0.2,0,posY,0)
        Btn.BackgroundColor3 = Color3.fromRGB(0,170,255)
        Btn.TextColor3 = Color3.new(1,1,1)
        Btn.Font = Enum.Font.SourceSansBold
        Btn.TextScaled = true
        Btn.Text = name
        Btn.MouseButton1Click:Connect(callback)
    end

    -- SOUTH BRONX BUTTON
    CreateButton("South Bronx", 0.35, function()
        GameSelectGUI:Destroy()
        print("Loading South Bronx script...")
    -- =========================
-- SOUTH BRONX SCRIPT
-- =========================

local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")

local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local hrp = character:WaitForChild("HumanoidRootPart")

-- Locations
